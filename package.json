{
  "name": "nohvex-exchange",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "postbuild": "node scripts/deploy-db.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc -p . --noEmit",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "node scripts/postinstall.js",
    "db:init": "node scripts/init-db.js",
    "db:deploy": "node scripts/deploy-db.js",
    "db:setup": "node scripts/setup-database.js",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "verify-account": "node scripts/verify-account.js",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "clean": "rm -rf .next node_modules/.cache",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:dev:start": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:restart": "docker-compose -f docker-compose.dev.yml restart",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f web",
    "docker:shell": "docker-compose -f docker-compose.dev.yml exec web sh",
    "docker:db:shell": "docker-compose -f docker-compose.dev.yml exec postgres psql -U nohvex -d nohvex",
    "docker:redis:cli": "docker-compose -f docker-compose.dev.yml exec redis redis-cli",
    "docker:admin": "docker-compose -f docker-compose.dev.yml --profile admin up -d",
    "docker:admin:down": "docker-compose -f docker-compose.dev.yml --profile admin down",
    "docker:health": "curl -f http://localhost:3000/api/health",
    "docker:metrics": "curl -f http://localhost:3000/api/dev-metrics",
    "docker:test": "scripts/test-dev-env.bat",
    "docker:prod": "docker-compose up --build -d",
    "docker:prod:down": "docker-compose down",
    "docker:prod:logs": "docker-compose logs -f",
    "docker:prod:restart": "docker-compose restart",
    "docker:prod:health": "curl -f http://localhost:3000/api/health",
    "dev:tools": "scripts/dev-tools.bat",
    "dev:tools:ps": "powershell -ExecutionPolicy Bypass -File scripts/dev-tools.ps1",
    "dev:tools:sh": "./scripts/dev-tools.sh",
    "dev:test": "scripts/test-dev-env.bat",
    "dev:health": "curl -s http://localhost:3000/api/health | jq .",
    "dev:metrics": "curl -s http://localhost:3000/api/dev-metrics | jq .",
    "deploy:staging": "vercel",
    "deploy:production": "vercel --prod"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-sesv2": "^3.864.0",
    "@coinbase/wallet-sdk": "^3.7.2",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.14.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@walletconnect/ethereum-provider": "^2.21.8",
    "@walletconnect/modal": "^2.7.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.8.0",
    "framer-motion": "^12.23.12",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "moralis": "^2.22.0",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "uuid": "^11.1.0",
    "web3": "^4.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.47.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.0",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
